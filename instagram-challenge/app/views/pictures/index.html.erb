<a href='/pictures/new'>Add a picture</a>

<% if @pictures.all.any? %>
  <% @pictures.all.each do |picture| %>
    <h2><%= link_to picture.name, picture_path(picture) %></h2>
    <p1><%= picture.comment %></p1>
    <p></p>
    <p1><%= link_to "Edit #{picture.name}", edit_picture_path(picture) %></p1>
    <p></p>
    <p1><%= link_to "Delete #{picture.name}", picture_path(picture), method: :delete %></p1>
    <hr>
  <% end %>
<% else %>
  <h1>No pictures yet</h1>
<% end %>
